{
  "name": "ofms-organic-farm-management",
  "version": "1.0.0",
  "description": "Organic Farm Management System (OFMS) - Enterprise organic farming business management with USDA organic compliance",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "next build",
    "build:css": "next build --debug",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "style:check": "node scripts/style-check.js",
    "css:modules:validate": "node scripts/validate-css-modules.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset && npm run db:seed",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "db:health": "prisma db execute --stdin < prisma/health-check.sql",
    "db:integrity:check": "node scripts/check-referential-integrity.ts",
    "db:constraints:validate": "echo 'TODO: Implement business constraints validation'",
    "db:orphans:detect": "node scripts/detect-orphaned-records.ts",
    "db:consistency:verify": "echo 'TODO: Implement data consistency verification'",
    "db:audit:validate": "echo 'TODO: Implement audit trail validation'",
    "db:referential:validate": "node scripts/integrity-check.js",
    "db:transaction:test": "echo 'TODO: Implement transaction boundary testing'",
    "db:rollback:verify": "echo 'TODO: Implement rollback procedure verification'",
    "db:health:comprehensive": "npm run db:integrity:check && npm run db:orphans:detect",
    "test-data:all": "node scripts/load-all-test-data.js",
    "test-data:base": "node scripts/create-test-data.js",
    "test-data:scenarios": "node scripts/role-scenarios.js",
    "test-data:reset": "npm run db:reset && npm run test-data:all",
    "quality:check": "node scripts/quality-check.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "commander": "^14.0.0",
    "date-fns": "^2.30.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "ml-regression": "^6.3.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "openai": "^5.8.2",
    "pg": "^8.16.3",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "recharts": "^2.8.0",
    "sharp": "^0.32.0",
    "simple-statistics": "^7.8.8",
    "typescript": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.19.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^10.3.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^15.0.0",
    "msw": "^2.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
